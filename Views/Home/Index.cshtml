@{ViewData["Title"] = "Home Page";}

<div class="text-center">
    <h1 class="display-4">Welcome to SingleSpace!</h1>
    <h3>The place to manage your To Dos</h3>
</div>

<div class="register box">
        <h3>Register</h3>
        <form action="Register" method="post" autocomplete="off">
            <label for="uname">Username:</label>
            <input id="uname" type="text" name="Username"><br> 

            <label for="email">Email:</label>
            <input id="email" type="email" name="Email"><br>

            <label for="pw">Password:</label>
            <input id="pw" type="password" name="Password"><br>

            <label for="pw_conf">Password Confirm:</label>
            <input id="pw_conf" type="password" name="PasswordConfirmation"><br><br>

            <input type="submit" value="Register" class="btn btn-success">
        </form>
        <p style="color:red margin:30px;">@ViewBag.RegError</p>
    </div>


    <div class="login box">
        <h3>Log In</h3>
        <form action="Login" method="post" autocomplete="off">
            <label for="emaill">Email:</label>
            <input id="emaill" type="email" name="Email"><br>

            <label for="passwordl">Password:</label>
            <input id="passwordl" type="password" name="PwToCheck"><br><br>

            <input type="submit" value="Log In" class="btn btn-success">
        </form>
        <span style="color:red margin:30px;">@ViewBag.LogError</span>
    </div>


<style>
    
.dash{
  width: 960px;
  padding: 10px;
}

.dash h1{
  display: inline-block;
  margin-right: 400px;
}

.box {
  display: inline-block;
  vertical-align: top;
  margin: 50px 50px;
}

.box label{
  width: 140px;
  text-align: right;
}

.post{
  display: inline-block;
  margin: 0px 60px;
}

.all{
  display: inline-block;
  vertical-align: top;
  margin: 0px 60px;
  width: 300px;
}

</style>